■サンプルコード
----------------------------------------------------------
const person = {
    firstName: "太郎",
    lastName: "田中"
}
console.log(`ようこそ、${person.lastName + person.firstName}さん。`);
----------------------------------------------------------

----------------------------------------------------------
const name = "apple";
console.log(`果物の名前は${name}です。`);
// 出力: 果物の名前はappleです。
----------------------------------------------------------

----------------------------------------------------------
const fruit = "apple";
const prices = {
  apple: 150,
  orange: 100
};
console.log(`${fruit}の価格は${prices[fruit]}円です。`);
// 出力: appleの価格は150円です。
----------------------------------------------------------

----------------------------------------------------------
const fruits = ["apple", "orange", "banana"];
const index = 1;
console.log(`${fruits[index]}はおいしいです。`);
// 出力: orangeはおいしいです。
----------------------------------------------------------
