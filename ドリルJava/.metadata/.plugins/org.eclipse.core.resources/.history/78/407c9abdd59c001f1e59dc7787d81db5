package drill;

public class function {

    public static void main(String[] args) {
        Function<String, String> asteriskDecorator = createDecorator('*');
        Function<String, String> dotDecorator = createDecorator('.');
        System.out.println(asteriskDecorator.apply("hello"));
        System.out.println(dotDecorator.apply("hello"));
    }
    
    public static Function<String, String> createDecorator(char decoration){
        // ▼ 戻り値で関数オブジェクトを返す
        return (String str)->{
            String decorationStr = "";
            for(int i = 0; i < str.length(); i++){
                // 外側のメソッドの引数 decoration の値を記憶している
            	decorationStr = decorationStr.concat(String.valueOf(decoration));
            }            
            return "".concat(decorationStr+"\n").concat(str).concat("\n"+decorationStr);
        };
    }

}